<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class:"form-label", for:"emailnew" %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", id:"emailnew" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class:"form-label", for:"passwordnew" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"passwordnew"%>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class:"form-label", for:"passwordnewconfirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"passwordnewconfirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-light" %>
  </div>
<% end %>

<%= render "devise/shared/links"%>
