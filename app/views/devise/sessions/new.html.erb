<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class:"form-label", for:"email"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class:"form-label", for:"password"  %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check form-switch mb-3">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label" %>
    </div>
  <% end %>


  <div class="actions mb-5">
    <%= f.submit "Log in", class:"btn btn-dark"%>
  </div>
<% end %>

