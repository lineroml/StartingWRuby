<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class:"form-label" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Jane" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, style: "display: block", class:"form-label" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Doe" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, style: "display: block",  class:"form-label" %>
    <%= form.text_field :email, class:"form-control", placeholder:"name@example.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, style: "display: block",  class:"form-label" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"333232332" %>
  </div>

  <div class="mb-3">
    <%= form.label :twitter, style: "display: block",  class:"form-label" %>
    <%= form.text_field :twitter, class:"form-control", placeholder:"@bitchwow" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :user_id, class:"form-control", placeholder:"User Id", value:current_user.id, id: :friend_user_id, type: :hidden %>
  </div>
  <div class="mb-3">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
  
<% end %>
