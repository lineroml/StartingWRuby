<% if user_signed_in? %>

  <h1>Friends List</h1>
  <%= link_to "New friend ‚ûï", new_friend_path, class:"btn btn-light mb-5" %>
  <div id="friends">
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col">User Id</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>
            <td>
              <%= button_to 'Delete üóëÔ∏è', friend, method: :delete, data: {  turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<% else %>
  <h1>Friends List</h1>
  <p>Sign in to see your friends ü´Ç‚ú®‚ù§</p>

  <img src="friends_hero.svg" alt="friends illustration" class="mt-5" style="height: 250px">

<% end %>


